<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/selector_item"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lblDescripcionArticuloObjetivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mnDescripcion"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblCodigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:text="@string/lblCodigo" />

            <TextView
                android:id="@+id/lblCodigoObjetivoValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lblCero" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:text="@string/lblStock" />

            <TextView
                android:id="@+id/lblStockObjetivoValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lblCero" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:text="@string/lblObjetivo" />

            <TextView
                android:id="@+id/lblObjetivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lblCero"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:text="@string/lblVendido" />

            <TextView
                android:id="@+id/lblCantidadVendida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lblCero"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:text="@string/lblSaldo" />

            <TextView
                android:id="@+id/lblCantidadAVender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lblCero"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblUnidadPorBulto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblUnidadPorBultoLabel" />

        <TextView
            android:id="@+id/lblValueUnidadPorBulto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:text="@string/lblCero"
            android:textSize="20sp"/>
    </LinearLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblBultos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lblBultos" />

                <EditText
                    android:id="@+id/txtBultosAVender"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hBulto"
                    android:inputType="number"
                    android:minHeight="48dp"
                    android:selectAllOnFocus="true"
                    android:text="@string/lblCero"
                    tools:ignore="DuplicateSpeakableTextCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblUnidades"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lblUnidades" />

                <EditText
                    android:id="@+id/txtUnidadesAVender"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:minHeight="48dp"
                    android:selectAllOnFocus="true"
                    android:text="@string/lblCero" />
            </LinearLayout>

