<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/selector_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/lblPromoDesde"
            android:text="@string/lblPromoDesdeDescripcionEj"
            android:layout_marginLeft="5dp"
            android:maxLines="2"
            android:layout_weight="1"
            android:gravity="center"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/lblPromoHasta"
            android:text="@string/lblPromoHastaDescripcionEj"
            android:layout_marginLeft="5dp"
            android:maxLines="2"
            android:layout_weight="1"
            android:gravity="center"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/lblPromoDto"
            android:text="@string/lblDescuentoPositivoDescripcionEj"
            android:layout_marginRight="5dp"
            android:maxLines="2"
            android:layout_weight="1"
            android:gravity="center"/>
    </LinearLayout>


</LinearLayout>
