<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lblDescripcionArticulo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/vgm_color"
        android:gravity="center"
        android:text="@string/lblDescripcionArticulo"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10sp"
        android:stretchColumns="*">

        <TableRow>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblBultos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lblBultos" />

                <EditText
                    android:id="@+id/txtBultosAVender"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="number"
                    android:minHeight="48dp"
                    android:selectAllOnFocus="true"
                    android:text="@string/lblCero"
                    tools:ignore="DuplicateSpeakableTextCheck"
                    android:labelFor="@+id/lblBultos"
                    android:hint="@string/hCero"
                    android:autofillHints="0"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblUnidades"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lblUnidades" />

                <EditText
                    android:id="@+id/txtUnidadesAVender"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="number"
                    android:minHeight="48dp"
                    android:selectAllOnFocus="true"
                    android:text="@string/lblCero"
                    android:labelFor="@+id/lblUnidades"
                    android:hint="@string/hCero"
                    android:autofillHints="0"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="140sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5sp"
            android:text="@string/lblPrecioLista" />

        <TextView
            android:id="@+id/txtPrecioLista"
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            android:gravity="end"
            android:text="@string/lblPrecioListaNro"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="140sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5sp"
            android:text="@string/lblDescuentoEmpresa" />

        <TextView
            android:id="@+id/txtDtoEmpresa"
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            android:gravity="end"
            android:text="@string/lblDescuentoEmpresaNro"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="140sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5sp"
            android:text="@string/lblDescuentoProveedor" />

        <TextView
            android:id="@+id/txtDtoProveedor"
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            android:gravity="end"
            android:text="@string/lblDescuentoProveedorNro"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="10sp"
        android:paddingBottom="10sp">

        <View
            android:layout_width="250sp"
            android:layout_height="2dp"
            android:background="@android:color/background_dark" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="140sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5sp"
            android:text="@string/lblPrecioPorUnidad" />

        <TextView
            android:id="@+id/txtPrecioFinalU"
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            android:gravity="end"
            android:text="@string/lblPrecioPorUnidadNro"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="140sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5sp"
            android:text="@string/lblUnidadesTotales" />

        <TextView
            android:id="@+id/txtUnidadesTotales"
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            android:gravity="end"
            android:text="@string/lblUnidadesTotalesNro"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="10sp"
        android:paddingBottom="10sp">

        <View
            android:layout_width="250sp"
            android:layout_height="2dp"
            android:background="@android:color/background_dark" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="140sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5sp"
            android:text="@string/lblTotalLinea" />

        <TextView
            android:id="@+id/txtTotalLinea"
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            android:gravity="end"
            android:text="@string/lblTotalLineaNro"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="15sp">

        <Button
            android:id="@+id/btnAceptar"
            style="@style/btnAceptarNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aceptar" />

        <Button
            android:id="@+id/btnCancelar"
            style="@style/btnCancelarNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancelar" />
    </LinearLayout>
</LinearLayout>