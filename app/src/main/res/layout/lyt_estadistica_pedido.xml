<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lyt_estadistica_lyt"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblCodigoClienteEstadisticaPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblCodigoEgresoDescripcion"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblClienteEstadisticaPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:text="@string/lblNombreApellidoDescripcion"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblDocumentoEstadisticaPedido"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/lblDocumento"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblIdDocumentoEstadisticaPedido"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:text="@string/lblPedidoLabel" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblPuntoVentaEstadisticaPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lblPuntoVenta"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblIdPuntoVentaEstadisticaPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/lblPuntoVentaDescripcionEj" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblFechaEstadisticaPedido"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="@string/lblFecha"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblFechaRegistroEstadisticaPedido"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:text="@string/lblFechaHoraDescripcionEj" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblNumeroDocumentoEstadisticaPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lblNumero"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblIdNumeroDocumentoEstadisticaPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/lblNumeroDescripcionEJ" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblSubTotalVentaEstadisticaPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblTotalSinImpuestoLabel"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblTotalEstadisticaPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/lblCienDescripcion"
            android:textSize="17sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblTotalVentaEstadisticaPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lblTotal"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblTotalGralEstadisticaPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/lblCienDescripcion"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>