<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item"
    android:orientation="horizontal" >

    <include layout="@layout/lyt_detalle_cliente"/>

    <TextView
        android:id="@+id/lblCantidadVentas"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="1sp"
        android:maxLines="1"
        android:text="@string/lblCantPedidoNoAtencionEj"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1sp"
        android:layout_marginRight="2sp"
        android:maxLines="1"
        android:text="@string/lblPedidoLabel"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/lblCantidadNoPedidos"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="1sp"
        android:maxLines="1"
        android:text="@string/lblCantPedidoNoAtencionEj"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1sp"
        android:layout_marginRight="2sp"
        android:maxLines="1"
        android:text="@string/lblNoAtencionLabel"
        android:textSize="11sp" />

</LinearLayout>