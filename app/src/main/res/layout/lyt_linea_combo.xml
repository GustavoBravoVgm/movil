<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_item_normal"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvArticulo"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:singleLine="false" />

    <EditText
        android:id="@+id/etBultos"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="0.13"
        android:gravity="center"
        android:hint="@string/hBulto"
        android:importantForAutofill="no"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColorHint="#757575" />

    <EditText
        android:id="@+id/etUnidades"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="0.13"
        android:gravity="center"
        android:hint="@string/hUnidad"
        android:importantForAutofill="no"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColorHint="#757575" />

    <!--     <TextView -->
    <!--         android:id="@+id/tvCantidad" -->
    <!--         android:layout_width="0dip" -->
    <!--         android:layout_height="wrap_content" -->
    <!--         android:layout_weight="0.10" -->
    <!--         android:gravity="center" -->
    <!--         android:text="1234" /> -->

    <TextView
        android:id="@+id/tvStock"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="0.13"
        android:gravity="center"
        android:text="@string/lblStockDescripcionEj" />

</LinearLayout>