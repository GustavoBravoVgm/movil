<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/pagerVenta"
    android:orientation="vertical">

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#FF909090" />

    <TableLayout
        android:id="@+id/tableTotalesVentas"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:stretchColumns="*">

        <TableRow>

            <TextView
                android:id="@+id/lblSubtotal"
                android:layout_width="wrap_content"
                android:text="@string/lblSubtotalPie" />

            <TextView
                android:id="@+id/lblSubtotalValue"
                android:layout_width="wrap_content"
                android:text="@string/lblCero"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblImpuestos"
                android:layout_width="wrap_content"
                android:gravity="right"
                android:text="@string/lblVentaDetalleImpuesto" />

            <TextView
                android:id="@+id/lblImpuestosValue"
                android:layout_width="wrap_content"
                android:gravity="right"
                android:text="@string/lblCero"
                android:textStyle="bold" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/lblDescuentoCabecera"
                android:layout_width="wrap_content"
                android:text="@string/lblVentaDetalleDescuentoCabecera" />

            <TextView
                android:id="@+id/lblDescuentoCabeceraValue"
                android:layout_width="wrap_content"
                android:text="@string/lblCero"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblDescuentoDetalles"
                android:layout_width="wrap_content"
                android:gravity="right"
                android:text="@string/lblVentaDetalleDescuentoDetalles" />

            <TextView
                android:id="@+id/lblDescuentoDetallesValue"
                android:layout_width="wrap_content"
                android:gravity="right"
                android:text="@string/lblCero"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/idTablaRent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:stretchColumns="*">
        <!--android:layout_below="@+id/tableTotalesVentas"-->

        <TableRow>

            <LinearLayout
                android:id="@+id/idLinearRentProv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="@string/prov" />

                <TextView
                    android:id="@+id/idRentProvPedido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="@string/lblPedidoNoRentable" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/idLinearRentEmpresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="@string/emp" />

                <TextView
                    android:id="@+id/idRentEmpPedido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="@string/lblPedidoNoRentable" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">
        <!-- android:layout_below="@+id/idTablaRent"-->

        <TextView
            android:id="@+id/lblTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="@string/lblTotal"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/lblTotalValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="@string/lblCero"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
	
		
	