<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linerLayoutLineaPs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_item"
    android:orientation="vertical"
    android:paddingLeft="10dp">

    <TextView
        android:id="@+id/txtDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mnDescripcion"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblPrecioUnitario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:text="@string/lblPrecioUnitarioVentaDetalle"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/lblPrecioUnitarioValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblCantidadArticuloDescripcionEj"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:text="@string/lblTotKg"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/lblCaKilosValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lblUno"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/lblUnidades"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:text="@string/lblVentaDetalleUnidades"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/lblUnidadesValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lblUno"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/lblSubtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:text="@string/lblSubtotalVentaDetalle"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/lblSubtotalValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/lblDiezPrDescripcionEj"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>